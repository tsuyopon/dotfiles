[user]
	name = tsuyopon
	email = tsuyoppy@r2.dion.ne.jp
[core]
	pager = less -cm       # git diffの文字化け対策
	editor = vim
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
	quotepath = false      # git statusの文字化け対策
[push]
	default = simple
[http]
	sslVerify = false
[color]
	ui = true
[alias]
	cam = commit -a --amend   # 直前のcommitを修正
	oneline = log --pretty=oneline
	log-graph = log --graph --date=short --pretty=format:'%Cgreen%h %cd %Cblue%cn %Creset%s'
	log-all = log --graph --all --color --pretty='%x09%h %cn%x09%s %Cred%d%Creset'
	d1 = diff HEAD~           # HEADから1つ前とのdiff
	d2 = diff HEAD~~
	d3 = diff HEAD~~~
	d4 = diff HEAD~~~~
	d5 = diff HEAD~~~~~
	d10 = diff HEAD~~~~~~~~~~
[grep]
	lineNumber = true
[color "grep"]
	match = cyan
	linenumber = bold white
	filename = yellow
